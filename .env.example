# Environment Variables for Voting App Deployment
# COPY THIS FILE TO .env AND UPDATE WITH YOUR VALUES
# cp .env.example .env

# AWS Configuration
export AWS_REGION="ap-northeast-2"
export AWS_PROFILE="default"

# Terraform Variables
export TF_VAR_aws_region="ap-northeast-2"
export TF_VAR_key_pair_name="YOUR_AWS_KEY_PAIR_NAME"
export TF_VAR_my_ip="YOUR_PUBLIC_IP/32"

# Docker Hub Configuration
export DOCKERHUB_USERNAME="YOUR_DOCKERHUB_USERNAME"

# Database Credentials (for production, use stronger passwords)
export POSTGRES_USER="postgres"
export POSTGRES_PASSWORD="CHANGE_THIS_PASSWORD"
export POSTGRES_DB="postgres"

# SSH Configuration
export SSH_KEY_PATH="~/.ssh/YOUR_KEY_NAME.pem"

# Optional: Ansible Configuration
export ANSIBLE_HOST_KEY_CHECKING="False"
export ANSIBLE_STDOUT_CALLBACK="yaml"
